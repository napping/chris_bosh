<% include templates/header %>
<div class="overall">
    <div class="row box-row">
        <div class="col-md-4">
            <% include templates/box-photo %>
       </div>
       <div class="col-md-8">
          <div class="box box-comments">
            <div class="list-comments">
                <h3>Comments</h3>
                  <ul>
                    <% for (var i = 0; i < comments.length; i++) { %>
                        <li>
                          <h4><%= comments[i].USERNAME %></h4>
                          <% if (comments[i].RATING) { %>
                            <%= comments[i].RATING %>/5 <br />
                          <% } %>
                          <%= comments[i].REVIEW %>
                        </li>
                      <% } %>
                  </ul>
            </div>
        </div>
       </div>
    </div>

</div>
<% include templates/footer %>
