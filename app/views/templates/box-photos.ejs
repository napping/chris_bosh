<div class="box box-photos">
    <div class="list-photos">
        <div class="box-photos-header">
            <div class="box-photos-header-title">
                <h3>Photos</h3>
            </div>
        </div>
        <% for (var i = 0; i < photos.length; i++) { %>

            <% if (i % 4 == 0) { %>
                <div class="row photo-row">
            <% } %>

            <div class="col-md-3">
                <a href="/photos/<%= photos[i].PID %>"<%= photos[i].URL %>"><img src="<%= photos[i].URL %>"/></a>
            </div>

            <% if ((i % 4 == 3) || (i == photos.length -1)) { %>
                </div>
            <% } %>

        <% } %>

        </div>
    <% if (typeof(upload) != "undefined" && upload == 1) { %>
        <div class="upload-photo">
            <form method="post" action="/photos">
                <h5>Paste photo URL here:</h5>
                <input class="input-photo" type="text" name="url">
                <input class="input-submit-photo" type="submit" value="Upload Photo"></input>
            </form>
        </div>
    <% } %>
        <div class="list-albums">
            <h3>Albums</h3>
            <ul>
                <% for (var i = 0; i < albums.length; i++ ) { %>
                    <li>
                        <a href="/albums/<%= albums[i].AID %>">
                            <h5><%= albums[i].NAME %></h5>
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>
</div>


